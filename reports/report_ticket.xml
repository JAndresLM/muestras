<openerp>
<data>
    <report
        id="report_ticket"
        model="lab.ticket"
        string="Informe de Boleta"
        name="muestras.report_ticket_view"
        file="muestras.report_ticket"
        report_type="qweb-pdf" />

    <template id="report_ticket_view">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name"/>
                        <p>Cliente: <span t-field="doc.customer"/></p>
                        <h3>Muestras:</h3>
                        <ul>
                            <t t-foreach="doc.sample_ids" t-as="m">
                                <li><span t-field="m.name"/></li>
                            </t>
                        </ul>
                    </div>
                </t>
            </t>
        </t>
    </template>
</data>
</openerp>