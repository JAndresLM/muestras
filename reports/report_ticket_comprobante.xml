<openerp>
<data>
    <report
        id="report_ticket_comprobante"
        model="lab.ticket"
        string="Comprobante de recibo de muestras"
        name="muestras.report_ticket_comprobante_view"
        file="muestras.report_ticket_comprobante"
        report_type="qweb-pdf"/>

    <template id="report_ticket_comprobante_view">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report.external_layout">
                    <div class="page">
                    	<style>
                            #cprincipal{
                                width:100%;
                                border:solid black 1px;
                                padding:10px;
                            }

                            #tInfo, #tInfo tr, #tInfo tr td{
                                border: 1px solid black;
                                border-collapse: collapse;
                                overflow:hidden;
                                text-align:center;
                            }
                            #tHeader, #tHeader tr, #tHeader tr td{
                                border-collapse: collapse;
                                overflow:hidden;
                            }
                        </style>
                        <div id="cPrincipal">
                            <div id="cHeader" style="border-bottom:solid red 4px;">
                                <table id="tHeader" width="100%" style="margin-bottom:7px;">
                                    <tr>
                                        <td style="font-size:20px" width="50%">
                                            <strong>Laboratorio de Analisis Agronomicos</strong>
                                        </td>
                                        <td width="50%" rowspan="2" class="text-right">Logo</td>
                                    </tr>
                                    <tr>
                                        <td style="font-size:16px"><strong>Telefono:(506)2401-3250</strong></td>
                                    </tr>
                                    <tr>
                                        <td style="font-size:16px"><strong>analisis.agronomicos@gmail.com</strong></td>
                                        <td style="font-size:16px" class="text-right"><strong>N° 0202</strong></td>
                                    </tr>
                                </table>
                            </div>
                            <div id="cBody" style="margin-top:7px;">
                                <table id="tInfo" width="100%">
                                    <tr>
                                        <td width="15%">
                                            <strong>Cliente</strong>
                                        </td>
                                        <td width="45%">
                                            <span t-field="doc.customer"/>
                                        </td>
                                        <td width="10%">
                                            <strong>Fecha</strong>
                                        </td>
                                        <td width="30%">
                                            <span t-field="doc.date" t-field-options='{"format":"dd/MM/y"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="15%">
                                            <strong>Cédula</strong>
                                        </td>
                                        <td width="45%">
                                            <span t-field="doc.customer.idcard"/>
                                        </td>
                                        <td width="10%">
                                            <strong>Hora</strong>
                                        </td>
                                        <td width="30%">
                                            <span t-field="doc.date" t-field-options='{"format":"hh:mm:ss"}'/>
                                        </td>
                                    </tr>
                                </table>
                                <br/>
                                <!-- INFORMACION DE LAS MUESTRAS -->
                                <table id="tInfo" width="100%">
                                    <tr>
                                        <td width="20%"><strong>Código asignado</strong></td>
                                        <td width="15%"><strong>Tipo de Muestra</strong></td>
                                        <td width="50%"><strong>Detalle de Análisis</strong></td>
                                        <td width="15%"><strong>Costo Análisis</strong></td>
                                    </tr>
                                    <t t-foreach="doc.sample_ids" t-as="m">
                                        <tr>
                                            <td><span t-field="m.name"/></td>
                                            <td><span t-field="m.category"/></td>
                                            <td>
                                                <t t-foreach="m.analysis_ids" t-as="a">
                                                    <span t-field="a.name"/>,
                                                </t>
                                            </td>
                                            <td> </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="2" style="background-color:white;"></td>
                                        <td style="background-color:silver; border: 1px solid black;">
                                            <strong>TOTAL</strong>
                                        </td>
                                        <td style="background-color:silver; border: 1px solid black;">
                                            <strong><span t-field="doc.cost"/></strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div id="cFooter" width="100%" style="margin-top:0px;">
                                <table>
                                    <tr>
                                        <td width="85%">
                                            <p style="font-size: 10px; font-style: italic;">
                                                Codigo FUNDATEC 10-11-01<br/>
                                                Número de Cuenta FUNDATEC<br/>
                                                Banco Nacional de Costa Rica: 100-01-07500-3959-4, Banco de Costa Rica: 275-004039-8<br/>
                                                Nota: En caso de realizar el pago directamente en el banco, favor presentar el omprobante en el laboratorio o enviarlo al correo electrónico.
                                            </p>
                                        </td>
                                        <td width="15%" style="padding-top:10px;">Recibe:________________</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</data>
</openerp>