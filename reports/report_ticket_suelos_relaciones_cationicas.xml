<openerp>
<data>
    <report
        id="report_ticket_suelos_relaciones_cationicas"
        model="lab.ticket"
        string="Reporte de ensayo suelos con relaciones cationicas"
        name="muestras.report_ticket_suelos_relaciones_cationicas_view"
        file="muestras.report_ticket_suelos_relaciones_cationicas"
        report_type="qweb-pdf"/>

    <template id="report_ticket_suelos_relaciones_cationicas_view">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report.external_layout">
                    <div class="page">
                        <style>
                            *{
                                font-size:14px;
                            }

                            h3{
                                font-weight:bold;
                            }

                            hr{
                                border:solid black 1px;
                            }
                        </style>
                        <h2 class="text-center">REPORTE DE ENSAYO SUELOS</h2>
                        <hr/>
                        <!-- INFORMACION DEL CLIENTE-->
                        <style>
                            #tinfo, #tinfo tr, #tinfo tr td, #tdir, #tdir tr, #tdir tr td {
                                border: solid white 1px;
                                overflow:hidden;
                            }

                            #tinfo td, #tdir td{
                                padding:5px;
                            }
                        </style>
                        <table id="tinfo" class="" width="100%">
                                <tr>
                                    <td width="50%">
                                        <strong>Cliente: </strong>
                                        <span t-field="doc.customer"/>
                                    </td>
                                    <td width="25%">
                                        <strong>Teléfono: </strong>
                                        <t t-if="doc.customer.phone_ids">
                                            <span t-field="doc.customer.phone_ids[0].name"/>
                                        </t>
                                    </td>
                                    <td width="25%">
                                        <strong>Fecha: </strong>
                                        <span t-field="doc.date" t-field-options='{"format": "dd/MM/y"}'/>
                                    </td>
                                </tr>
                        </table>
                        <!-- DIRECCION DEL CLIENTE-->
                        <table id="tdir" width="100%">
                            <tr>
                                <td width="50%"><strong>Provincia: </strong><span t-field="doc.customer.province"/></td>
                                <td width="25%"><strong>Canton: </strong><span t-field="doc.customer.canton"/></td>
                                <td width="25%"><strong>Distrito: </strong><span t-field="doc.customer.district"/></td>
                            </tr>
                            <tr>
                                <td width="100%" colspan="3">
                                    <strong>Otras Señas: </strong><span t-field="doc.customer.address"/>
                                </td>
                            </tr>
                        </table>
                        <hr/>
                        <!-- RESULTADOS DE LAS MUESTRAS-->
                        <style>
                            #tm, #tm tr, #tm tr th, #tm tr td {
                                border: 1px solid black;
                                border-collapse: collapse;
                                overflow:hidden;
                                text-align:center;
                            }

                            #tm td, #tm th{
                                padding:5px;
                            }

                            #tm{
                                border-bottom: solid black 1px;
                            }

                            tfoot tr, tfoot tr td{
                                height:5px;
                                font-size:10px;
                                padding:0px;
                                font-style: italic;
                            }

                            tfoot tr:first-child td:first-child {
                                font-size:14px;
                            }
                        </style>
                        <table id="tm" class="" width="98%" style="margin-top:15px;margin-bottom:0px;">
                            <thead>
                                <tr>
                                  <th colspan="3"></th>
                                  <th colspan="4">cmol(+)/L</th>
                                  <th colspan="5">mg/L</th>
                                </tr>
                                <tr>
                                  <th width="8%">N° Lab</th>
                                  <th width="30%">Identificación de campo</th>
                                  <th width="6%">pH</th>
                                  <th width="8%">Acidez ext.</th>
                                  <th width="6%">Ca</th>
                                  <th width="6%">Mg</th>
                                  <th width="6%">K</th>
                                  <th width="6%">Cu</th>
                                  <th width="6%">Mn</th>
                                  <th width="6%">Fe</th>
                                  <th width="6%">Zn</th>
                                  <th width="6%">P</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.sample_ids" t-as="m">
                                    <t t-if="m.name[0]=='S'">
                                        <tr >
                                            <td>
                                                <span t-field="m.name"/>
                                            </td>
                                            <td>
                                                <span t-field="m.land"/>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='pH'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Acidez ext.'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Ca'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Mg'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='K'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Cu'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Mn'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Fe'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Zn'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='P'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td rowspan="2" colspan="2">Rangos Medios</td>
                                    <td>5,5</td>
                                    <td>0,5</td>
                                    <td>4,0</td>
                                    <td>1,0</td>
                                    <td>0,2</td>
                                    <td>1,0</td>
                                    <td>5,0</td>
                                    <td>5,0</td>
                                    <td>3,0</td>
                                    <td>10,0</td>
                                </tr>
                                <tr>
                                    <td>7,0</td>
                                    <td>0,5</td>
                                    <td>15,0</td>
                                    <td>6,0</td>
                                    <td>0,8</td>
                                    <td>20,0</td>
                                    <td>50,0</td>
                                    <td>50,0</td>
                                    <td>10,0</td>
                                    <td>40,0</td>
                                </tr>
                            </tfoot>
                        </table>
                        <div style="width:98%;border-top: solid black 1px;"></div>
                        <!-- RELACIONES CATIONICAS-->
                        <table id="tm" class="" width="98%" style="margin-top:15px;margin-bottom:0px;">
                            <thead>
                                <tr>
                                  <th colspan="7"></th>
                                  <th colspan="3">%</th>
                                </tr>
                                <tr>
                                  <th width="8%">N° Lab</th>
                                  <th width="30%">Relaciones cationicas</th>
                                  <th width="6%">Ca/Mg</th>
                                  <th width="8%">Ca/k</th>
                                  <th width="6%">Mg/K</th>
                                  <th width="12%">(Ca+Mg)/K</th>
                                  <th width="6%">C.I.C.E</th>
                                  <th width="12%">Saturación de acidez</th>
                                  <th width="6%">Materia Orgánica</th>
                                  <th width="6%">Carbono Orgánico</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.sample_ids" t-as="m">
                                    <t t-if="m.name[0]=='S'">
                                        <tr >
                                            <td>
                                                <span t-field="m.name"/>
                                            </td>
                                            <td>
                                                <span t-field="m.land"/>
                                            </td>
                                            <!--Ca/Mg-->
                                            <td>
                                                <t t-set="Ca" t-value="'0,0'"/>
                                                <t t-set="Mg" t-value="'1,0'"/>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Ca'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Ca" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='Mg'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Mg" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                </t>
                                                <t t-set="relcat" 
                                                    t-value="float(Ca.replace(',', '.'))/float(Mg.replace(',', '.'))"/>
                                                <t t-if="relcat!=0.0">
                                                    <t t-set="relcat" t-value="round(relcat,2)"/>
                                                    <t t-esc="relcat"/>
                                                </t>
                                            </td>
                                            <!--Ca/K-->
                                            <td>
                                                <t t-set="Ca" t-value="'0,0'"/>
                                                <t t-set="K" t-value="'1,0'"/>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Ca'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Ca" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='K'">
                                                        <t t-if="a.valor">
                                                            <t t-set="K" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                </t>
                                                <t t-set="relcat" 
                                                    t-value="float(Ca.replace(',', '.'))/float(K.replace(',', '.'))"/>
                                                <t t-if="relcat!=0.0">
                                                    <t t-set="relcat" t-value="round(relcat,2)"/>
                                                    <t t-esc="relcat"/>
                                                </t>
                                            </td>
                                            <!--Mg/K-->
                                            <td>
                                                <t t-set="Mg" t-value="'0,0'"/>
                                                <t t-set="K" t-value="'1,0'"/>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Mg'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Mg" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='K'">
                                                        <t t-if="a.valor">
                                                            <t t-set="K" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                </t>
                                                <t t-set="relcat" 
                                                    t-value="float(Mg.replace(',', '.'))/float(K.replace(',', '.'))"/>
                                                <t t-if="relcat!=0.0">
                                                    <t t-set="relcat" t-value="round(relcat,2)"/>
                                                    <t t-esc="relcat"/>
                                                </t>
                                            </td>
                                            <!--(Ca+Mg/K)-->
                                            <td>
                                                <t t-set="Ca" t-value="'0,0'"/>
                                                <t t-set="Mg" t-value="'0,0'"/>
                                                <t t-set="K" t-value="'1,0'"/>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Ca'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Ca" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='Mg'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Mg" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='K'">
                                                        <t t-if="a.valor">
                                                            <t t-set="K" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                </t>
                                                <t t-set="relcat" 
                                                    t-value="(float(Ca.replace(',', '.'))+float(Mg.replace(',', '.')))/float(K.replace(',', '.'))"/>
                                                <t t-if="relcat!=0.0">
                                                    <t t-set="relcat" t-value="round(relcat,2)"/>
                                                    <t t-esc="relcat"/>
                                                </t>
                                            </td>
                                            <!--C.I.C.E-->
                                            <td>
                                                <t t-set="Ac" t-value="'0,0'"/>
                                                <t t-set="Ca" t-value="'0,0'"/>
                                                <t t-set="Mg" t-value="'0,0'"/>
                                                <t t-set="K" t-value="'0,0'"/>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Acidez ext.'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Ac" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='Ca'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Ca" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='Mg'">
                                                        <t t-if="a.valor">
                                                            <t t-set="Mg" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="a.element_id.name=='K'">
                                                        <t t-if="a.valor">
                                                            <t t-set="K" t-value="a.valor"/>
                                                        </t>
                                                    </t>
                                                </t>
                                                <t t-set="relcat" 
                                                    t-value="float(Ca.replace(',', '.'))+float(Mg.replace(',', '.'))+float(K.replace(',', '.'))+float(Ac.replace(',', '.'))"/>
                                                <t t-if="relcat!=0.0">
                                                    <t t-esc="relcat"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Saturacion de acidez'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Materia Organica'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-foreach="m.result_ids" t-as="a">
                                                    <t t-if="a.element_id.name=='Carbono Organico'"><span t-field="a.valor"/></t>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td rowspan="2" colspan="2">Rangos Medios</td>
                                    <td>2,0</td>
                                    <td>5,0</td>
                                    <td>2,5</td>
                                    <td>10,0</td>
                                    <td>5</td>
                                    <td>10,0</td>
                                    <td>3</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>5,0</td>
                                    <td>25,0</td>
                                    <td>15</td>
                                    <td>40,0</td>
                                    <td></td>
                                    <td></td>
                                    <td>10</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                        <div style="width:98%;border-top: solid black 1px;"></div>
                        <!-- OBSERVACIONES Y METODOLOGIA-->
                        <style>
                            #tcomments, #tcomments tr, #tcomments tr td{
                                border: solid white 1px;
                            }
                        </style>
                        <table id="tcomments" class="" style="margin-top:25px;" width="100%">
                            <tr><!--t-if="doc.sample_ids[0].category.comments"-->
                                <td width="20%"><strong>Observación:</strong></td>
                                <td width="80%">
                                    <!--<span t-field="doc.sample_ids[0].category.methology"/>-->
                                    <ul>
                                      <li>Muestras tomadas por el interesado.</li>
                                      <li>Los resultados de este ensayo reflejan unicamente a la muestra entregada en el laboratorio por el interesado.</li>
                                    </ul>
                                </td>
                            </tr>
                            <tr><!--t-if="doc.sample_ids[0].category.methology"-->
                                <td width="20%"><strong>Metodología:</strong></td>
                                <td width="80%">
                                    <!--<span t-field="doc.sample_ids[0].category.methology"/>-->
                                    <ul>
                                      <li>K, P y menores extraídos con Olsen Modificado.</li>
                                      <li>Ca, Mg y Acidez extractable extraídos con KCI.</li>
                                      <li>pH en agua.</li>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                        <!-- DATOS DEL COORDINADOR DEL LABORATORIO-->
                        <div style="margin-top:60px;">__________________________________________</div>
                        <div><span t-field="doc.analyst.company_id.coordinator"/></div>
                        <div><span t-field="doc.analyst.company_id.title"/></div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</data>
</openerp>